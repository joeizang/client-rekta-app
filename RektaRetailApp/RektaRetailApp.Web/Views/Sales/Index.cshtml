@model RektaRetailApp.Web.ViewModel.PaginatedResponse<RektaRetailApp.Web.ViewModel.Sales.SaleViewModel>

@{
    ViewData["Title"] = "Index";
    var classes = new List<string> {"btn", "btn-primary"};
    var button = new ButtonModel
    {
        AspActionName = "MakeASale",
        ButtonText = "Make A Sale",
        CssClasses = classes,
        BootstrapIconClass = "bi-plus-circle"
    };
}

<h1>Index</h1>

<p>
    <partial model="button" name="_IndexPageButton" />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Sales ID
            </th>
            <th>
                Sales Date
            </th>
            <th>
                Number of Items Sold
            </th>
            <th>
                Sales Person
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaleDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfItemsSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesPerson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrandTotal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
