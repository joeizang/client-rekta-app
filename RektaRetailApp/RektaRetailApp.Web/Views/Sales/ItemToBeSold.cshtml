@model RektaRetailApp.Web.ViewModel.Sales.ItemSoldViewModel

<div>
    <div class="card shadow-sm p-3 mb-5 bg-white rounded" style="width: 12rem;">
        <img src="https://imagesvc.meredithcorp.io/v3/mm/image?url=https%3A%2F%2Fimages.media-allrecipes.com%2Fuserphotos%2F4552934.jpg&w=596&h=399&c=sc&poi=face&q=85" 
             alt="" class="card-img-top" />
        <div class="card-body">
            @if (string.IsNullOrEmpty(Model?.ItemName))
            {
                <h6 class="card-title">
                    No Product Name Yet!
                </h6>
            }
            else
            {
                <h6 class="card-title">
                    @Model?.ItemName
                </h6>
            }
            <div class="d-flex justify-content-between">
                <div class="col-3"><i class="far fa-lightbulb"></i></div>
                <div class="col-9">Counter thing</div>
            </div>
        </div>
    </div>
</div>

