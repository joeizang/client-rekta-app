@model RektaRetailApp.Web.ViewModel.Sales.ItemSoldViewModel


<div class="col-sm-3">
    <div class="card shadow-sm mb-5 bg-white rounded">
        <img src="https://imagesvc.meredithcorp.io/v3/mm/image?url=https%3A%2F%2Fimages.media-allrecipes.com%2Fuserphotos%2F4552934.jpg&w=596&h=399&c=sc&poi=face&q=85"
             alt="" class="card-img-top" />
        <div class="card-body">
            @if (string.IsNullOrEmpty(Model?.ItemName))
            {
                <h6 class="card-title">
                    No Product Name Yet!
                </h6>
            }
            else
            {
                <h6 class="card-title">
                    @Model?.ItemName
                </h6>
            }
        </div>
        <div class="d-flex justify-content-between card-footer sale-card-footer-margin">
            <div class="col-3"><i class="bi-lightbulb"></i></div>
            <div class="col-9 d-flex justify-content-center">
                <button class="card-plus">
                    <i class="bi-plus"></i>
                </button>
                <p></p>
                <button class="card-minus">
                    <i class="bi-dash"></i>
                </button>
            </div>
        </div>
    </div>
</div>

